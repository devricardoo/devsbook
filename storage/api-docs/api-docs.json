    "paths": {
        "/api/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Efetuar login",
                "operationId": "8dcb70df1020986038d098cc08d05dae",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "ricardo18@gmail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "1234"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login efetuado com sucesso"
                    },
                    "400": {
                        "description": "E-mail ou senha incorretos"
                    }
                }
            }
        },
        "/api/auth/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Efetuar logout",
                "operationId": "69281b12abb272c76871f19cb17ca563",
                "responses": {
                    "200": {
                        "description": "Usuário deslogado com sucesso"
                    },
                    "400": {
                        "description": "Token inválido"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/auth/refresh": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Atualizar token",
                "operationId": "b2eae7a8032954d25b46c7ec6f489c68",
                "responses": {
                    "200": {
                        "description": "Token atualizado com sucesso"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/devbook/user": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Registrar um novo usuário",
                "operationId": "07b552e969922ef9fa12a7adccd5d03b",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "birthdate"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "birthdate": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Usuário registrado com sucesso"
                    },
                    "400": {
                        "description": "Dados inválidos"
                    },
                    "422": {
                        "description": "E-mail ja cadastrado"
                    }
                }
            }
        },
        "/api/feed": {
            "get": {
                "tags": [
                    "Feed"
                ],
                "summary": "Listar o feed",
                "operationId": "f93e1590b5a32248c41a16667cd99fda",
                "responses": {
                    "200": {
                        "description": "Feed retornado com sucesso"
                    },
                    "404": {
                        "description": "Feed não encontrado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Feed"
                ],
                "summary": "Cria uma nova postagem do tipo texto ou foto",
                "operationId": "2b2b42547af8bf30a47771a74adaea09",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "type"
                                ],
                                "properties": {
                                    "type": {
                                        "description": "Tipo da postagem: 'text' ou 'photo'",
                                        "type": "string",
                                        "enum": [
                                            "text",
                                            "photo"
                                        ]
                                    },
                                    "body": {
                                        "type": "string"
                                    },
                                    "photo": {
                                        "type": "file",
                                        "format": "binary"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Postagem criada com sucesso"
                    },
                    "422": {
                        "description": "Erro de validação ou dados ausentes"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/user/feed": {
            "get": {
                "tags": [
                    "Feed"
                ],
                "summary": "Retorna o feed do usuário por paginação",
                "operationId": "7506b67bea364d7406cfc34e8bcafe36",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Número da página da listagem",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Feed do usuário retornado com sucesso"
                    },
                    "404": {
                        "description": "Usuário não encontrado ou sem posts"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
