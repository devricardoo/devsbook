                "operationId": "1b643d7400fe8d65184992d83d4934de",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "required": false
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Fotos do usuário retornadas com sucesso"
                    },
                    "404": {
                        "description": "Usuário não encontrado ou sem fotos"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
